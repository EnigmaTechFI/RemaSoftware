@using Microsoft.AspNetCore.Mvc.TagHelpers

<div class="modal fade" id="confirm-change-status-modal" tabindex="-1" role="dialog" aria-labelledby="modal-head" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-head">Cambio stato ordine</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <form method="post" id="form-confirm-chg-ord-status" asp-controller="Order" asp-action="UpdateOrderStatus">
                <div class="modal-body">
                    <p style="text-align:center;" class="pb-2 font-italic h5">Numero di pezzi in uscita dall'azienda</p>
                    <input name="outgoing_orders" type="number" class="form-control" id="formGroupExampleInput" placeholder="Numero di pezzi">
                    <div class="row">
                        <div class="col-12" id="div-list-ops">

                            <input id="id-ordine-chg-status" type="hidden" name="orderId">
                            <input id="current-status-chg-status" type="hidden" name="currentStatus">


                        </div>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Annulla</button>
                <button class="btn btn-primary" form="form-confirm-chg-ord-status" type="submit">Conferma</button>
            </div>
        </div>
    </div>
</div>