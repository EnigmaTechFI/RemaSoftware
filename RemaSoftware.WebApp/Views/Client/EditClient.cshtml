@model RemaSoftware.WebApp.Models.ClientViewModel.ClientViewModel

@{
    ViewData["Title"] = "Modifica Cliente";
}

<link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap4.min.css"/>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h4 class="m-0 font-weight-bold text-primary">Modifica Cliente</h4>
    </div>
    <div class="card-body">
        <form method="post" class="needs-validation" asp-controller="Client" asp-action="EditClient" novalidate>
            @Html.HiddenFor(model=>model.ClientId)
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="validationTooltip01">Nome Azienda *</label>
                    <input asp-for="Name" type="text" class="form-control" id="validationTooltip01" placeholder="Nome Azienda" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="validationTooltip02">Partita Iva</label>
                    <input asp-for="P_Iva" type="text" class="form-control" id="validationTooltip02" placeholder="P. IVA">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="validationTooltip02">Via</label>
                    <input asp-for="Street" type="text" class="form-control" id="validationTooltip02" placeholder="Via">
                </div>
                <div class="col-md-3 mb-3">
                    <label class="font-weight-bold" for="validationTooltip02">N° Civico</label>
                    <input asp-for="StreetNumber" type="text" class="form-control" id="validationTooltip02" placeholder="Numero Civico">
                </div>
                <div class="col-md-3 mb-3">
                    <label class="font-weight-bold" for="validationTooltip04">CAP</label>
                    <input asp-for="Cap" type="text" class="form-control" id="validationTooltip04" placeholder="CAP">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label class="font-weight-bold" for="validationTooltip03">Città</label>
                    <input asp-for="City" type="text" class="form-control" id="validationTooltip03" placeholder="Città">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="font-weight-bold" for="validationTooltip03">Provincia</label>
                    <input asp-for="Province" type="text" class="form-control" id="validationTooltip03" placeholder="Provincia">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="font-weight-bold" for="validationTooltip05">Stato</label>
                    <input asp-for="Nation" type="text" class="form-control" id="validationTooltip05" placeholder="Stato">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <label class="font-weight-bold" for="validationTooltip03">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="validationTooltip03" placeholder="Email">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="font-weight-bold" for="validationTooltip03">Telefono</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="validationTooltip03" placeholder="Numero di telefono">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="font-weight-bold" for="validationTooltip05">Fax</label>
                    <input asp-for="Fax" type="text" class="form-control" id="validationTooltip05" placeholder="Fax">
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Modifica</button>
        </form>
    </div>
</div>

@{ await Html.RenderPartialAsync("_UtentiCliente", Model.ClientUsers);}

@section Scripts
{
    <script src="~/lib/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        table = $('#table-clientusers').DataTable({
            "language": {
                "zeroRecords": "Nessun utente associato a questo cliente"
            },
            "searching": false,
            "bLengthChange": false,
            "info": false,
            "paging": false,
            "ordering": false
        });
    </script>
}
