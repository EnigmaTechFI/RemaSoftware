@using Microsoft.AspNetCore.Mvc.TagHelpers
@using RemaSoftware.Domain.Constants
@model RemaSoftware.WebApp.Models.EmployeeViewModel.EmployeeViewModel

@{
    ViewData["Title"] = "Aggiungi dipendente";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Aggiungi dipendente</h1>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Nuovo dipendente</h6>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-row">
                <div class="col-md-3 mb-4">
                    <label>Nome</label>
                    <input asp-for="Employee.Name" type="text" class="form-control" placeholder="Nome" required>
                    <span asp-validation-for="Employee.Name" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-4">
                    <label>Cognome</label>
                    <input asp-for="Employee.Surname" type="text" class="form-control" placeholder="Cognome" required>
                    <span asp-validation-for="Employee.Surname" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-4">
                    <label>Mail</label>
                    <input asp-for="Employee.Mail" type="text" class="form-control" placeholder="Mail">
                </div>
                <div class="col-md-3 mb-4">
                    <label>Matricola</label>
                    <input asp-for="Employee.Number" type="text" class="form-control" placeholder="Matricola" required>
                    <span asp-validation-for="Employee.Number" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 mb-4">
                    <label>Seleziona data di nascita</label>
                    <div class='input-group date'>
                        <input placeholder="Seleziona data di consegna" type='text' class="form-control bg-white" id='datetimepicker1' asp-for="Employee.BirthDate" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <label>Luogo di nascita</label>
                    <input asp-for="Employee.BirthPlace" type="text" class="form-control" placeholder="Luogo di nascita">
                </div>
                <div class="col-md-4 mb-4 form-group">
                    <label for="formGroupExampleInput">Seleziona sesso</label>
                    <select asp-for="Employee.Gender" class="form-control">
                        <option selected="selected" value="Nessuna">Nessuna</option>
                        <option value="Uomo">Uomo</option>
                        <option value="Donna">Donna</option>
                    </select>
                </div>

            </div>
            <div class="form-row">
                <div class="col-md-4 mb-4">
                    <label>Codice fiscale</label>
                    <input asp-for="Employee.TaxID" type="text" class="form-control" placeholder="Codice fiscale">
                </div>
                <div class="col-md-4 mb-4">
                    <label>Mansione</label>
                    <input asp-for="Employee.Task" type="text" class="form-control" placeholder="Mansione">
                </div>
                <div class="col-md-4 mb-4">
                    <label>Livello</label>
                    <input asp-for="Employee.Level" type="number" class="form-control" placeholder="Livello">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4 mb-4 form-group">
                    <label for="formGroupExampleInput">Tipo di rapporto</label>
                    <select asp-for="Employee.TypeRelationship" class="form-control">
                        <option selected="selected" value="Nessuna">Nessuno</option>
                        <option value="@TypeRelationship.LavoroDipendente">Lavoro dipendente</option>
                        <option value="@TypeRelationship.LavoroAutonomo">Lavoro autonomo</option>
                    </select>
                </div>
                <div class="col-md-4 mb-4 form-group">
                    <label for="formGroupExampleInput">Tipo di posizione</label>
                    <select asp-for="Employee.TypePosition" class="form-control">
                        <option selected="selected" value="Nessuna">Nessuno</option>
                        <option value="@TypePosition.InServizio">In servizio</option>
                        <option value="@TypePosition.Maternità">Maternità</option>
                        <option value="@TypePosition.MaternitaFacoltativa">Maternità facoltativa</option>
                    </select>
                </div>
                 <div class="col-md-4 mb-4">
                    <label>Codice riconoscimento fluida</label>
                    <input asp-for="Employee.FluidaId" type="text" class="form-control" placeholder="codice fluida">
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3 mb-4">
                    <label>Seleziona data di inizio rapporto</label>
                    <div class='input-group date'>
                        <input placeholder="Seleziona data di inizio rapporto" type='text' class="form-control bg-white" id='datetimepicker2' asp-for="Employee.StartRelationship"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                
                <div class="col-md-3 mb-4">
                    <label>Seleziona data di fine rapporto</label>
                    <div class='input-group date'>
                        <input placeholder="Seleziona data di fine rapporto" type='text' class="form-control bg-white" id='datetimepicker3' asp-for="Employee.EndRelationship"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <label>Numero di ore lavorative</label>
                    <input asp-for="Employee.NumberHour" type="number" class="form-control" placeholder="Numero di ore" required>
                    <span asp-validation-for="Employee.NumberHour" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="form-check" style="margin-left: 40px; margin-top:  35px;">
                        <input asp-for="Employee.Extraordinary" style="cursor: pointer; width: 22px; height: 22px;" class="form-check-input" type="checkbox" id="flexCheckChecked">
                        <label class="form-check-label" style="cursor: pointer; font-size: 20px; margin-left:  10px;" for="flexCheckChecked">
                            Straordinari
                        </label>
                    </div>
                </div>

            </div>
            
            <button class="btn btn-primary" type="submit" onclick="clickEvent()">Aggiungi</button>
        </form>
    </div>
</div>

