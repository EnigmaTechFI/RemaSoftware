@using RemaSoftware.Domain.Constants
@model RemaSoftware.WebApp.Models.PDFViewModel.PDFViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid pt-3">
        <div class="row pb-5">
            <div class="col-sm-6" style="font-size: large">
                <table cellpadding="5">
                    <tr>
                        <td>
                            <img src="~/img/rema_sr.png" width="100" />
                        </td>

                        <td>
                            <b>Rema S.r.l.</b>
                            Via Guido Rossa, 5/D<br>
                            50032, Borgo San Lorenzo, FI<br />
                            P.Iva: 06998340480
                        </td>
                    </tr>
                </table>

            </div>
            <div class="col-sm-6 text-right" style="font-size: large">
                <b>Dati cliente:</b><br>
                @Model.DdtIn.Product.Client.Name,<br>
                @Model.DdtIn.Product.Client.Street, @Model.DdtIn.Product.Client.StreetNumber<br>
                @Model.DdtIn.Product.Client.Cap, @Model.DdtIn.Product.Client.City, @Model.DdtIn.Product.Client.Province, @Model.DdtIn.Product.Client.Nation<br>
                P.IVA @Model.DdtIn.Product.Client.P_Iva
            </div>
        </div>
        <center><hr style="width: 80%" /></center>
        
        <br>
        <b>Descrizione dell'ordine: </b>@Model.DdtIn.Description  <br>

        <br />
        <b>Immagine del prodotto:</b>

        <br />
        <br />

        <div class="text-center">
            <img src="@Model.BasePathImages@Model.DdtIn.Product.FileName" style='width: 376px; height: 282px' />
        </div>

        <br>

        <div class="row pt-5">
            <div class="col-12" style="font-size: large; align-items: center;">
                <center>
                    <table border="1" width="95%" cellpadding="5">
                        <tr>
                            <td width="60%"><b>Nome prodotto: </b></td>
                            <td width="40%">@Model.DdtIn.Product.Name</td>
                        </tr>
                        <tr>
                            <td width="60%"><b>Codice prodotto: </b></td>
                            <td width="40%">@Model.DdtIn.Product.SKU</td>
                        </tr>
                        <tr>
                            <td width="60%"><b>Codice DDT: </b></td>
                            <td width="40%">@Model.DdtIn.Code</td>
                        </tr>
                        <tr>
                            <td width="60%"><b>Data di consegna dell'ordine: </b></td>
                            <td width="40%">@Model.DdtIn.DataOut.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <td width="60%"><b>Numero di pezzi richiesti: </b></td>
                            <td width="40%">@Model.DdtIn.Number_Piece</td>
                        </tr>
                        <tr>
                            <td width="60%"><b>Operazioni richiste sull'ordine: : </b></td>
                            <td width="40%">
                                <ul>
                                    @foreach (var operation in Model.DdtIn.SubBatch.Batch.BatchOperations.Where(s => s.Operations.Name != OtherConstants.EXTRA).ToList())
                                    {
                                        <li>@operation.Operations.Name</li>
                                    }
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td width="60%"><b>Note: </b></td>
                            <td width="40%">@Model.DdtIn.Note</td>
                        </tr>
                    </table>
                </center>
            </div>
            <div class="w-100">
                <div class="text-center">
                    <img src="@Model.QRCode" style='width: 282px; height: 282px' />
                </div>
            </div>
        </div>
    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/js/sb-admin-2.min.js"></script>

    <script>
        $(document).ready(function () {
            
            window.print();
        })
    </script>
</body>
</html>